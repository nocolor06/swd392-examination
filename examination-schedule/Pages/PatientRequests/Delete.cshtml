@page
@model examination_schedule.Pages.PatientRequests.DeleteModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete Event</title>

    <style>
        .confirmation-box {
            margin: auto; /* Center the box horizontally */
            max-width: 600px; /* Example width, adjust as needed */
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #f9f9f9;
        }

        .row {
            margin-bottom: 10px;
        }

        .col-sm-2, .col-sm-10 {
            padding: 5px;
        }
    </style>
</head>
<body>
    <h1>Patient Requests</h1>

    <h4>Patient: poPio</h4>

    <h3>Are you sure you want to delete this?</h3>
    <div class="confirmation-box">
        <h4>Event</h4>
        <hr />
        <dl class="row">
            <!-- Display event details using Html.DisplayNameFor and Html.DisplayFor -->

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Date)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Date)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.EventType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.EventType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Status)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Status)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Doctor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Doctor.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Patient)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Patient.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Room)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Room.RoomName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.Staff)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.Staff.Username)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Event.TimeSlot.StartTime)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Event.TimeSlot.StartTime) -
                @Html.DisplayFor(model => model.Event.TimeSlot.EndTime)
            </dd>
        </dl>

        <!-- Delete form -->
        <form id="deleteForm" method="post">
            <input type="hidden" asp-for="Event.EventId" />
            <button type="button" onclick="confirmDelete()" class="btn btn-danger">Delete</button> |
            <a asp-page="./Index">Back to List</a>
        </form>
    </div>
    <script>
        function confirmDelete() {
            if (confirm("Are you sure you want to delete this event?")) {
                document.getElementById("deleteForm").submit();
            }
        }
    </script>
</body>
</html>
