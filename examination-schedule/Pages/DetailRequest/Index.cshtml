@page
@model examination_schedule.Pages.DetailRequest.IndexModel
@{
}
<div class="container">
    <div class="justify-content-center">
        <div class="card">
            <div class="card-body">
                <p>Mã Yêu cầu: @Model.Event.EventId</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Tên Bệnh Nhân: @Model.Event.Patient.UsernameNavigation.GetFullName()</li>
                    <li class="list-group-item">Hồ sơ sức khỏe: <a href="@Model.Event.Patient.MedicalRecord">Link</a></li>
                    <li class="list-group-item">Bác sĩ: @Model.Event.Doctor.UsernameNavigation.GetFullName()</li>
                    <li class="list-group-item">Ngày: @Model.Event.Date.ToString("dd/MM/yyyy")</li>
                    <li class="list-group-item">Ghi chú: 
                        @if (string.IsNullOrEmpty(Model.Event.Description))
                        {
                            <p>Không có</p>
                        }
                        else
                        {
                            <p>@Model.Event.Description</p>
                        }
                    </li>
                    <li class="list-group-item">Trạng Thái:
                        @if (Model.Event.Status.Equals("Pending"))
                        {
                            <span class="badge badge-primary">Chờ Xử lý</span>
                        }
                        else if (Model.Event.Status.Equals("Approved"))
                        {
                            <span class="badge badge-success">Chấp thuận</span>
                        }else
                        {
                            <span class="badge badge-danger">Từ chối</span>
                        }
                    </li>
                   
                </ul>
                @if (Model.Event.Status.Equals("Pending"))
                {
                <form method="post" class="mt-3 mb-3">
                    <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                    <button type="submit" name="action" value="approve" class="btn btn-lg btn-success">Duyệt</button>
                    <button type="submit" name="action" value="reject" class="btn btn-lg btn-danger">Hủy</button>
                </form>
                }
            </div>
        </div>
    </div>
</div>
