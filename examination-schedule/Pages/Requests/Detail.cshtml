@page
@model examination_schedule.Pages.DetailRequest.IndexModel
@{
}
<div class="container">
    <div class="justify-content-center">
        <div class="card">
            <div class="card-body">
                <p>Event ID: @Model.Event.EventId</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">Patient: @Model.Event.Patient.UsernameNavigation.GetFullName()</li>
                    <li class="list-group-item">Medical Record: <a href="@Model.Event.Patient.MedicalRecord">Link</a></li>
                    <li class="list-group-item">Doctor: @Model.Event.Doctor.UsernameNavigation.GetFullName()</li>
                    <li class="list-group-item">Date: @Model.Event.Date.ToString("dd/MM/yyyy")</li>
                    <li class="list-group-item">Note: 
                        @if (string.IsNullOrEmpty(Model.Event.Description))
                        {
                            <p>None</p>
                        }
                        else
                        {
                            <p>@Model.Event.Description</p>
                        }
                    </li>
                    <li class="list-group-item">Status:
                        @if (Model.Event.Status.Equals("Pending"))
                        {
                            <span class="badge badge-primary">Pending</span>
                        }
                        else if (Model.Event.Status.Equals("Approved"))
                        {
                            <span class="badge badge-success">Approved</span>
                        }else
                        {
                            <span class="badge badge-danger">Rejected</span>
                        }
                    </li>
                   
                </ul>
                @if (Model.Event.Status.Equals("Pending"))
                {
                <form method="post" class="mt-3 mb-3">
                    <input type="hidden" name="eventId" value="@Model.Event.EventId" />
                    <button type="submit" name="action" value="approve" class="btn btn-lg btn-success">Approve</button>
                    <button type="submit" name="action" value="reject" class="btn btn-lg btn-danger">Reject</button>
                </form>
                }
            </div>
        </div>
    </div>
</div>
