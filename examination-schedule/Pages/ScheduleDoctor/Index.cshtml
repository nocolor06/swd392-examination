@page
@model examination_schedule.Pages.TimeTableDoctor.IndexModel
@{
}

<style>
    /* Custom CSS for table */
    .table-bordered-custom {
        border: 1px solid #dee2e6; /* Border thickness and color */
        width: 100%; /* Full width */
        border-collapse: collapse; /* Collapse border */
    }

        .table-bordered-custom th, .table-bordered-custom td {
            border: 1px solid #dee2e6; /* Border thickness and color for cells */
            padding: 8px; /* Padding inside cells */
            text-align: center; /* Center align text in cells */
        }
</style>
<h1>Doctor Schedule</h1>
<div>
    <form method="get">
        <label>From</label>
        <input type="date" name="from" value="" />
        <label>To</label>
        <input type="date" name="to" value="" />
        <label>Doctor ID</label>
        @* <input type="text" name="doctorId" value="" /> *@
        @* <select class="form-control" asp-items="Model.Doctors"></select> *@
        <select id="doctorId" name="doctorId" class="form-control">
            <option value="">-- Select Doctor --</option>
            @foreach (var doctor in Model.Doctors)
            {
                <option value="@doctor.Value">@doctor.Text</option>
            }
        </select>
        <button type="submit" asp-page="./Index">Submit</button>
    </form>
</div>

@if (Model.Events.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-bordered-custom table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Date</th>
                    <th>Event Type</th>
                    <th>Description</th>
                    <th>Patient</th>
                    <th>Room</th>
                    <th>Staff</th>
                    <th>Doctor</th>
                    <th>Time Slot</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Events)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.EventType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@item.Patient.UsernameNavigation.FirstName @item.Patient.UsernameNavigation.LastName</td>
                        <td>@Html.DisplayFor(modelItem => item.Room.RoomName)</td>
                        <td>@item.Staff.UsernameNavigation.FirstName @item.Staff.UsernameNavigation.LastName</td>
                        <td>@item.Doctor.UsernameNavigation.FirstName @item.Doctor.UsernameNavigation.LastName</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TimeSlot.StartTime) -
                            @Html.DisplayFor(modelItem => item.TimeSlot.EndTime)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No events found.</p>
}
